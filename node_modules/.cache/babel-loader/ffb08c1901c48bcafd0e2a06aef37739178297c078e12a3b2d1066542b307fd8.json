Item },\r\n  data () {\r\n    return {\r\n      showOffcanvas: false,\r\n      /* ajusta a tus rutas reales */\r\n      menu: [\r\n        { to:'/',          icon:'bi-house-fill', label:'Home', exact:true },\r\n        { to:'/dashboard', icon:'bi-bar-chart',  label:'Dashboard' },\r\n        { to:'/store',     icon:'bi-bag',        label:'Store', children:[\r\n            { to:'/store/products', icon:'bi-dot', label:'Products' },\r\n            { to:'/store/orders',   icon:'bi-dot', label:'Orders'   },\r\n            { to:'/store/subs',     icon:'bi-dot', label:'Subs'     }\r\n        ]},\r\n        { to:'/tasks',     icon:'bi-check2-square', label:'Tasks'  },\r\n        { to:'/files',     icon:'bi-folder',        label:'Files'  }\r\n      ]\r\n    }\r\n  },\r\n  methods: {\r\n    openOffcanvas () { this.showOffcanvas = true },\r\n    closeOffcanvas () { this.showOffcanvas = false }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n/* ---------- DESKTOP ---------- */\r\n.sidebar{\r\n  width:220px;\r\n  min-height:100vh;\r\n  background:#1e2127;\r\n  position:fixed;\r\n  left:0; top:0;\r\n  color:#ced4da;\r\n  z-index:1020;\r\n}\r\nbody { padding-left:220px; }\r\n@media (max-width: 767.98px){\r\n  body { padding-left:0; }\r\n}\r\n</style>\r\n"],"mappings":"AA0EA,OAAAA,WAAA;AAEA;EACAC,IAAA;EACAC,UAAA;IAAAF;EAAA;EACAG,KAAA;IACA;MACAC,aAAA;MACA;MACAC,IAAA,GACA;QAAAC,EAAA;QAAAC,IAAA;QAAAC,KAAA;QAAAC,KAAA;MAAA,GACA;QAAAH,EAAA;QAAAC,IAAA;QAAAC,KAAA;MAAA,GACA;QAAAF,EAAA;QAAAC,IAAA;QAAAC,KAAA;QAAAE,QAAA,GACA;UAAAJ,EAAA;UAAAC,IAAA;UAAAC,KAAA;QAAA,GACA;UAAAF,EAAA;UAAAC,IAAA;UAAAC,KAAA;QAAA,GACA;UAAAF,EAAA;UAAAC,IAAA;UAAAC,KAAA;QAAA;MACA,GACA;QAAAF,EAAA;QAAAC,IAAA;QAAAC,KAAA;MAAA,GACA;QAAAF,EAAA;QAAAC,IAAA;QAAAC,KAAA;MAAA;IAEA;EACA;EACAG,OAAA;IACAC,cAAA;MAAA,KAAAR,aAAA;IAAA;IACAS,eAAA;MAAA,KAAAT,aAAA;IAAA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}